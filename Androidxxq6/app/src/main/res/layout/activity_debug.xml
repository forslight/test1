<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|top"
        android:orientation="vertical"
        android:padding="12dp">

        <Button
            android:id="@+id/PathPrintBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:text="@string/Path_Print"/>

        <TextView
            android:id="@+id/pathInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

        <Button
            android:id="@+id/getPerssion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:text="@string/Request_stroage_permission"/>

        <Button
            android:id="@+id/writeFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:text="@string/writeFile"/>
        <TextView
            android:id="@+id/fileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>